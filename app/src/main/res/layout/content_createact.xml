<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_createact">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal"
                    android:paddingRight="10sp"
                    android:paddingBottom="10sp"
                    tools:layout_marginTop="10sp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*活動名稱"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="237dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxLength="10"
                        android:inputType="textPersonName" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="365dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal"
                    android:paddingRight="10sp">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*活動類型"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/activityType"
                        android:layout_width="232dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="365dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/shape_textview"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="61dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*揪團類型"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/timebtn1"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="即時" />

                    <Button
                        android:id="@+id/timebtn2"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="指定時段" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="365dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/shape_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="6dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:text="*開始時間"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/sDate"
                            android:layout_width="21dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="showDayDialog"
                            android:text="日期" />

                        <Button
                            android:id="@+id/sTime"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="showTimeDialog"
                            android:text="時間" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="365dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/shape_textview"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10sp"
                            android:layout_weight="1"
                            android:text="*結束時間"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/eDate"
                            android:layout_width="192dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="showDayDialog"
                            android:text="日期" />

                        <Button
                            android:id="@+id/eTime"
                            android:layout_width="174dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="showTimeDialog"
                            android:text="時間" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/t2"
                    android:layout_width="365dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*現在開始到"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/aftertimebtn"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="showAfterTimeDialog"
                        android:text="請選擇時間" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="  後結束"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="365dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*活動地點"
                        android:textSize="20sp" />

                    <fragment
                        android:id="@+id/autocomplete_fragment"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        android:layout_width="236dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="5dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="363dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="*人數限制"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/peopleLimit"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="showDialog"
                        android:text="選擇" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="64dp"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="活動封面"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView26"
                        android:layout_width="171dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_menu_gallery" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="366dp"
                    android:layout_height="101dp"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView45"
                        android:layout_width="96dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="說明"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editText12"
                        android:layout_width="236dp"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_textview"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:text="活動限制"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/chooseRestriction"
                        android:layout_width="235dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="選擇" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/restriction"
                    android:layout_width="361dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_textview"
                    android:text="目前活動限制：" />
            </LinearLayout>

            <Button
                android:id="@+id/button40"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:background="#fbfb25"
                android:text="提交"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>